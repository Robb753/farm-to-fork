{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "baseUrl": ".",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/legal/page.jsx",
    "components/ui/input.tsx",
    "app/_components/layout/FilterSection.tsx",
    "app/admin/notifications/page.tsx",
    "app/ClientLayout.tsx",
    "app/(routes)/explore/page.tsx",
    "middleware.js",
    "utils/googleMapsLoader.js"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
